#!/usr/bin/env PYTHONIOENCODING=UTF-8 python
# -*- coding: UTF-8 -*-

# <xbar.title>Host Sensors Temps 2</xbar.title>
# <xbar.version>v1.0.1</xbar.version>
# <xbar.author>Eduard C.</xbar.author>
# <xbar.author.github></xbar.author.github>
# <xbar.desc>Gets various temps from sensors command on the VM Host</xbar.desc>
# <xbar.image></xbar.image>
# <xbar.dependencies>python</xbar.dependencies>
from urllib import urlopen
import json

menu_icon = ""

LOCAL_IP = "192.168.0.1"
LOCAL_PORT = "8004"
LAYOUT_TYPE = "v2"
url = urlopen("http://" + LOCAL_IP + ":" + LOCAL_PORT +"/" + LAYOUT_TYPE).read()
sensors = json.loads(url)

default = sensors.get('default')
layout = sensors.get('layout')
version = sensors.get('version')

print sensors['data'][default]['Tctl'] + ' | templateImage=' + menu_icon

for group in sensors['data']:
    print '---'
    print '{} {}'.format(group.upper(), ' | font=SFPro-Semibold | size=12')
    for i, name in enumerate(sensors['data'][group]):
        sensor_output = u': '.join((name, sensors['data'][group][name])).encode('utf-8').strip()
        preffix = '└' if i+1 == len(sensors['data'][group]) else '├'
        print '{} {} {}'.format(preffix, sensor_output, ' | size=12')
        
print '---'
print 'Version: {} - Grouping: {} | disabled=true | font=SFPro-Thin | size=10'.format(version, layout)
